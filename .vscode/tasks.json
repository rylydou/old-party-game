{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/MGE.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "publish",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/MGE.csproj",
				"/p:GenerateFullPaths=true",
				"/p:PublishSingleFile=true",
				"/p:PublishTrimmed=false",
				"/p:PublishReadyToRun=true",
				"/consoleloggerparameters:NoSummary",
				"-r win-x64"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"run",
				"${workspaceFolder}/MGE.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		}
	]
}
